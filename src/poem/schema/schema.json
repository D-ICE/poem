{
  "global_attributes": {
    "schema": {
      "doc": "The schema that has been used to write this polar",
      "type": "string",
      "tags": ["required"]
    },
    "polar_type": {
      "doc": "The type of polar that is described in the NetCDF file. Must be ND here",
      "type": "string",
      "tags": ["required"],
      "values": ["ND", "CDA"]
    }
  },

  "dimensions": {

    "attributes": {
      "unit": {
        "doc": "The unit of the dimension. Must be valid according to dunits library",
        "type": "string",
        "tags": ["required"]
      },
      "description": {
        "doc": "The description of the dimension",
        "type": "string",
        "tags": ["required"]
      },
      "min": {
        "doc": "The minimum value that the dimension can take",
        "type": "double",
        "tags": ["required"]
      },
      "max": {
        "doc": "The maximum value that the dimension can take",
        "type": "double",
        "tags": ["required"]
      }

    },

    "fields": {

      "STW_kt": {
        "doc": "Speed Through Water",
        "type": "double",
        "tags": ["required"]
      },
      "TWS_kt": {
        "doc": "True Wind Speed",
        "type": "double",
        "tags": ["required"]
      },
      "TWA_deg": {
        "doc": "True Wind Angle",
        "type": "double",
        "tags": ["required"]
      },
      "WA_deg": {
        "doc": "Wave Angle",
        "type": "double",
        "tags": ["required"]
      },
      "Hs_m": {
        "doc": "Waves Significant Height",
        "type": "double",
        "tags": ["required"]
      }

    }

  },

  "variables": {

    "attributes": {

      "unit": {
        "doc": "The unit of the variable",
        "type": "string"
      },
      "description": {
        "doc": "The description of the variable",
        "type": "string"
      }

    },

    "fields": {
      "TotalBrakePower": {
        "doc": "The Total Brake Power of the vessel",
        "type": "double",
        "dimensions": ["STW_kt", "TWS_kt", "TWA_deg"]
      },
      "var_int": {
        "type": "int",
        "dimensions": ["STW_kt", "TWS_kt"]
      }
    }

  }
}